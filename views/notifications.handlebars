<main class="container special">
    <div class="row">
        <section class="col-lg-4 col-lg-offset-4 col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1">
            <h2>Notifications</h2>
            <h4>Requests</h4>
            <div class="list-group notifications">
                {{#no items}}
                <div class="list-group-item">
                    <strong>No item notifications</strong>
                </div>
                {{/no}}
                {{#each items}}
				{{#status "pending"}}
                <div class="list-group-item">
                    <div class="user-icon">
                        <div class="avatar" style="background-image: url('{{fileURL picture}}');"></div>
                    </div>
                    <div class="text"><a href="/user/{{wanter.username}}">{{wanter.name}}</a> wants <a href="/user/{{owner.username}}">{{owner.name}}</a>'s item <a href="/item/{{_id}}">"{{name}}"</a></div>
                </div>
				{{/status}}
				{{#status "rejected"}}
                <div class="list-group-item">
                    <div class="user-icon">
                        <div class="avatar" style="background-image: url('{{fileURL picture}}');"></div>
                    </div>
                    <div class="text"><a href="/user/{{owner.username}}">{{owner.name}}</a> rejected your request for item <a href="/item/{{_id}}">"{{name}}"</a></div>
                </div>
				{{/status}}
				{{#status "accepted"}}
                <div class="list-group-item">
                    <div class="user-icon">
                        <div class="avatar" style="background-image: url('{{fileURL picture}}');"></div>
                    </div>
                    <div class="text"><a href="/user/{{owner.username}}">{{owner.name}}</a> accepted <a href="/user/{{wanter.username}}">{{wanter.name}}</a>'s request for item <a href="/item/{{_id}}">"{{name}}"</a>. Arrange a meeting by going to their profile and tapping on messaging. </div>
                </div>
				{{/status}}
				{{#status "passed"}}
                <div class="list-group-item">
                    <div class="user-icon">
                        <div class="avatar" style="background-image: url('{{fileURL picture}}');"></div>
                    </div>
                    <div class="text"><a href="/user/{{owner.username}}">{{owner.name}}</a> has confirmed that he recieved your item <a href="/item/{{_id}}">"{{name}}"</a></div>
                </div>
				{{/status}}
                {{/each}}
            </div>
            <h4>Messages</h4>
            <div class="list-group notifications">
                {{#no messages}}
                <div class="list-group-item">
                    <strong>No unread messages</strong>
                </div>
                {{/no}}
                {{#each messages}}
                <div class="list-group-item">
                    {{> usericon user=owner}}
                    <div class="text"><a href="/messaging/{{owner.username}}">{{owner.name}}</a> sent you a message: "{{text}}"</div>
                </div>
                {{/each}}
            </div>
        </section>
    </div>
</main>
